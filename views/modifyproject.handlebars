<div id="main">
    <div>
        <h1>Modify project</h1>
        <div>
            {{#if isLoggedIn}}
                {{#if isAdmin}}
                    <form action="/projects/update" method="POST">
                        <fieldset>
                            <label for="projname">Project name: </label>
                            <input type="text" name="projname" id="projname" value="{{project.pname}}" required="required">
                            <br />
                            <label for="projyear">Project year: </label>
                            <input type="number" name="projyear" id="projyear" placeholder="2023" value="{{project.pyear}}" required="required">
                            <br />
                            <textarea name="projectdesc" id="projectdesc" mcols="30" rows="10" required="required">{{project.pdesc}}</textarea>
                            <br />
                            <label for="projtype">Project type: </label>
                            <select name="projtype" id="projtype" required="required">
                                <option value="Short film"{{#if (theTypeS project.ptype)}} selected="selected" {{/if}}>Short film</option>
                                <option value="Trailer"{{#if (theTypeT project.ptype)}} selected="selected" {{/if}}>Trailer</option>
                                <option value="Assignment"{{#if (theTypeA project.ptype)}} selected="selected" {{/if}}>Assignment</option>
                            </select>
                            <br />
                            <label for="projimg">Project image URL: </label>
                            <input type="text" name="projimg" id="projimg" placeholder="/img/" value="{{project.pimgURL}}" required="required">
                            <br />
                        </fieldset>
                        <input type="submit" value="Modify project">
                    </form>
                {{else}}
                    <p>Sorry, you must be an administrator to modify a project!</p>
                {{/if}}
            {{else}}
                <p>
                    Sorry, you must be logged in to modify a project!<br />
                    Please go to the <a href="/login">login</a> page.
                </p>
            {{/if}}
        </div>
    </div>
</div>